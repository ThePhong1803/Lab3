#include "fsm_automatic.h"

void fsm_automatic_run(){
	switch(status){
		case INIT:
			//TODO
			setRedLed();
			status = AUTO_RED;
			setTimer1(500);
			break;

		case AUTO_RED:
			//TODO
			if(isTimer1Expired() == 1){
				setGreenLed();
				setTimer1(300);
				status = AUTO_GREEN;
			}

			if(isButton1Pressed() == 1){
				status = MAN_RED;
				setTimer1(1000);
			}
			break;

		case AUTO_GREEN:
			//TODO

			if(isTimer1Expired() == 1){
				setYellowLed();
				setTimer1(200);
				status = AUTO_YELLOW;
			}

			if(isButton1Pressed() == 1){
				status = MAN_GREEN;
				setTimer1(1000);
			}
			break;

		case AUTO_YELLOW:
			//TODO

			if(isTimer1Expired() == 1){
				setRedLed();
				setTimer1(500);
				status = AUTO_RED;
			}

			if(isButton1Pressed() == 1){
				status = MAN_YELLOW;
				setTimer1(1000);
			}

			break;

		default:
			break;
	}
}
