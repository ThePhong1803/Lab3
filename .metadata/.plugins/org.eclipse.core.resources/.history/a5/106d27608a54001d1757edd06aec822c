#include "fsm_automatic.h"

void fsm_automatic_run(){
	switch(status){
		case INIT:
			//TODO
			setRedLed1();
			status = AUTO_RED;
			setTimer1(500);
			break;

		case AUTO_RED:
			//TODO
			setRedLed1();
			if(isTimer1Expired() == 1){
				setTimer1(300);
				status = AUTO_GREEN;
			}

			if(isButtonPressed(0)){
				status = AUTO_GREEN;
				//setTimer1(1000);
			}
			break;

		case AUTO_GREEN:
			//TODO
			setGreenLed1();
			if(isTimer1Expired() == 1){
				setTimer1(200);
				status = AUTO_YELLOW;
			}

			if(isButtonPressed(0)){
				status = AUTO_YELLOW;
				//setTimer1(1000);
			}
			break;

		case AUTO_YELLOW:
			//TODO
			setYellowLed1();
			if(isTimer1Expired() == 1){
				setTimer1(500);
				status = AUTO_RED;
			}

			if(isButtonPressed(0)){
				status = AUTO_RED;
				//setTimer1(1000);
			}

			break;

		default:
			break;
	}
}
