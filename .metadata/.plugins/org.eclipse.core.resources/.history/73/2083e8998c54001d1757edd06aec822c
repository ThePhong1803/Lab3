#include "fsm_modify_timer_control.h"

void fsm_modify_timer_control(){
	switch(status){
		case MODIFY_RED:

			if(isButtonPressed(2)) status = lastState;
			break;
		case MODIFY_YELLOW:

			if(isButtonPressed(2)) status = lastState;
			break;
		case MODIFY_GREEN:

			if(isButtonPressed(2)) status = lastState;
			break;
		default:
			break;
	}
}
